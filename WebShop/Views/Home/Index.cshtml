@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/racer.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/freeride.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/wc-gs.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/easy_carving.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Proizvodi</h2>
        <ul>
            <li>Pogledajte cijelu ponudu naseg web-shopa</li>
            <li><a asp-controller="Articles" asp-action="Index">Ponuda</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    <li><a asp-controller="Groups" asp-action="Index">Dodaj grupu proizvoda</a></li>
                    <li><a asp-controller="AddImage" asp-action="Index">Dodaj sliku</a></li>
                }

            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Skije</h2>
        <a asp-controller="Articles" asp-action="Index" asp-route-page="1" asp-route-currentGroup="2"><img width="200" height="200" src="~/images/skije.jpg" /></a>
    </div>
    <div class="col-md-3">
        <h2>Pancerice</h2>
        <a asp-controller="Articles" asp-action="Index" asp-route-page="1" asp-route-currentGroup="3"><img width="200" height="200" src="~/images/pancerice.jpg" /></a>
</div>
    <div class="col-md-3">
        <h2>Stapovi</h2>
        <a asp-controller="Articles" asp-action="Index" asp-route-page="1" asp-route-currentGroup="4"><img width="200" height="200" src="~/images/stapovi.jpg" /></a>
</div>
</div>
